                        {
                            "type": "text",
                            "label": "Client/Application ID",
                            "field": "client_id",
                            "help": "Application (Client) ID to use for Azure AD authentication."
                        },
                        {
                            "type": "text",
                            "label": "Client Key",
                            "field": "client_key",
                            "help": "Client key to use for Azure AD authentication.",
                            "encrypted": true
                        },
                        {
                            "type": "singleSelect",
                            "label": "Azure AD Authority",
                            "field": "aad_authority",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "AZURE_PUBLIC_CLOUD",
                                        "label": "Azure Public Cloud"
                                    },
                                    {
                                        "value": "AZURE_GOVERNMENT",
                                        "label": "Azure US Government"
                                    },
                                    {
                                        "value": "AZURE_CHINA",
                                        "label": "Azure China"
                                    },
                                    {
                                        "value": "AZURE_GERMANY",
                                        "label": "Azure Germany"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "text",
                            "label": "Access Key ID",
                            "field": "access_key_id",
                            "help": "Access Key ID to use for authentication."
                        },
                        {
                            "type": "text",
                            "label": "Secret Access Key",
                            "field": "secret_access_key",
                            "help": "Secret Access Key to use for authentication.",
                            "encrypted": true
                        },
                        {
                            "type": "radio",
                            "label": "Assume Role of EC2 Instance",
                            "field": "assume_ec2_role",
                            "help": "Assume the role assigned to the EC2 instance for authentication.",
                            "defaultValue": "0",
                            "options": {
                                "items": [
                                    {
                                        "label": "Yes",
                                        "value": "1"
                                    },
                                    {
                                        "label": "No",
                                        "value": "0"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "text",
                            "label": "AWS IAM Assumed Role ARN",
                            "field": "aws_role_arn",
                            "help": "IAM Role to assume for authentication."
                        },
                        {
                            "type": "text",
                            "label": "External ID",
                            "field": "aws_role_external_id",
                            "help": "External ID defined in IAM role."
                        },
                        {
                            "type": "file",
                            "label": "Private Key",
                            "field": "private_key",
                            "help": "Private key to use for public key authentication.",
                            "options": {
                                "fileSupportMessage": "Upload a PEM formatted file with .pem or .txt extension.",
                                "supportedFileTypes": [
                                    "pem",
                                    "txt"
                                ],
                                "maxFileSize": 500
                            },
                            "encrypted": true
                        },
                        {
                            "type": "text",
                            "label": "Private Key Passphrase",
                            "field": "key_passphrase",
                            "help": "Passphrase to use to decrypt an encrypted private key.",
                            "encrypted": true
                        }
                    ],
                    "title": "Accounts"
                },
                {
                    "name": "connections",
                    "table": {
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ],
                        "header": [
                            {
                                "label": "Name",
                                "field": "name"
                            },
                            {
                                "label": "Type",
                                "field": "connection_type",
                                "mapping": {
                                    "splunk": "Splunk Enterprise/Splunk Cloud",
                                    "s3": "AWS S3 (and Compatible)",
                                    "azureblob": "Azure Blob/Data Lake v2",
                                    "sftp": "SFTP Server",
                                    "smb": "SMB File Share"
                                }
                            },
                            {
                                "label": "Account",
                                "field": "account"
                            },
                            {
                                "label": "Status",
                                "field": "disabled",
                                "mapping": {
                                    "true": "Disabled",
                                    "false": "Enabled"
                                }
                            }
                        ]
                    },
                    "hook": {
                        "src": "connection_hook",
                        "type": "external"
                    },
                    "entity": [
                        {
                            "type": "text",
                            "label": "Name",
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Connection Name must begin with a letter and consist exclusively of alphanumeric characters and underscores.",
                                    "pattern": "^[a-zA-Z]\\w*$"
                                },
                                {
                                    "type": "string",
                                    "errorMsg": "Length of input name should be between 1 and 100",
                                    "minLength": 1,
                                    "maxLength": 100
                                }
                            ],
                            "field": "name",
                            "help": "A unique name for the connection.",
                            "required": true
                        },
                        {
                            "type": "radio",
                            "label": "Status",
                            "field": "disabled",
                            "help": "Enable this connection.",
                            "required": true,
                            "defaultValue": false,
                            "options": {
                                "items": [
                                    {
                                        "label": "Enabled",
                                        "value": false
                                    },
                                    {
                                        "label": "Disabled",
                                        "value": true
                                    }
                                ]
                            }
                        },
                        {
                            "type": "singleSelect",
                            "label": "Type",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "splunk",
                                        "label": "Splunk Enterprise/Splunk Cloud"
                                    },
                                    {
                                        "value": "s3",
                                        "label": "AWS S3 (and Compatible)"
                                    },
                                    {
                                        "value": "azureblob",
                                        "label": "Azure Blob/Data Lake v2"
                                    },
                                    {
                                        "value": "sftp",
                                        "label": "SFTP Server"
                                    },
                                    {
                                        "value": "smb",
                                        "label": "SMB File Share"
                                    }
                                ]
                            },
                            "defaultValue": "splunk",
                            "field": "connection_type"
                        },
                        {
                            "type": "singleSelect",
                            "label": "Account",
                            "options": {
                                "endpointUrl": "kvstore_tools_account_filter",
                                "dependencies": [
                                    "connection_type"
                                ]
                            },
                            "help": "Account to use for this connection.",
                            "field": "account",
                            "required": true
                        },
                        {
                            "type": "text",
                            "label": "Host",
                            "help": "DNS hostname or IP Address to use for this connection.",
                            "field": "host"
                        },
                        {
                            "type": "text",
                            "label": "Port",
                            "help": "TCP port number to use for this connection (default 8089).",
                            "field": "port"
                        },
                        {
                            "type": "text",
                            "label": "AWS Region",
                            "help": "Region for the S3 bucket (e.g. us-east-1).",
                            "field": "aws_region"
                        },
                        {
                            "type": "text",
                            "label": "Endpoint URL",
                            "help": "Leave blank for AWS.",
                            "field": "endpoint_url"
                        },
                        {
                            "type": "radio",
                            "label": "Hierarchical Namespace",
                            "help": "Check if connecting to Data Lake or hierarchical blob.",
                            "field": "azureblob_hierarchical",
                            "defaultValue": "0",
                            "options": {
                                "items": [
                                    {
                                        "label": "Yes",
                                        "value": "1"
                                    },
                                    {
                                        "label": "No",
                                        "value": "0"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "text",
                            "label": "Share Name",
                            "help": "SMB File Share Name for the connection.",
                            "field": "share_name"
                        },
                        {
                            "type": "text",
                            "label": "Bucket Name",
                            "help": "S3-compatible bucket for the connection.",
                            "field": "s3_bucket"
                        },
                        {
                            "type": "text",
                            "label": "Container Name",
                            "help": "Blob container for the connection.",
                            "field": "blob_container"
                        },
                        {
                            "type": "text",
                            "label": "Storage Path",
                            "help": "Where to read and write data.",
                            "field": "storage_path"
                        },
                        {
                            "type": "multipleSelect",
                            "label": "Read Roles",
                            "help": "Roles permitted to read data from this connection.",
                            "field": "acl_read",
                            "options": {
                                "endpointUrl": "/splunkd/__raw/services/authorization/roles"
                            }
                        },
                        {
                            "type": "multipleSelect",
                            "label": "Write Roles",
                            "help": "Roles permitted to write data to this connection.",
                            "field": "acl_write",
                            "options": {
                                "endpointUrl": "/splunkd/__raw/services/authorization/roles"
                            }
                        }
                    ],
                    "title": "Connections"
                },
                {
                    "name": "local_storage",
                    "hook": {
                        "src": "local_storage_hook",
                        "type": "external"
                    },
                    "entity": [
                        {
                            "type": "radio",
                            "label": "Retention",
                            "field": "retention_enabled",
                            "help": "Run retention scripts to delete old collection backups.",
                            "defaultValue": "0",
                            "options": {
                                "items": [
                                    {
                                        "label": "Enabled",
                                        "value": "1"
                                    },
                                    {
                                        "label": "Disabled",
                                        "value": "0"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "text",
                            "label": "Retention Period (Days)",
                            "validators": [
                                {
                                    "type": "number",
                                    "errorMsg": "Value must be a number",
                                    "range": [
                                        0,
                                        10000
                                    ]
                                }
                            ],
                            "field": "retention_days",
                            "defaultValue": 30,
                            "help": "Local storage location for staging uploads and downloads.\nNOT customizable in Splunk Cloud."
                        },
                        {
                            "type": "text",
                            "label": "Retention Size (MB)",
                            "validators": [
                                {
                                    "type": "number",
                                    "errorMsg": "Value must be a number",
                                    "range": [
                                        0,
                                        10000000
                                    ]
                                }
                            ],
                            "field": "retention_size_mb",
                            "defaultValue": 5000,
                            "help": "Maximum size of backup directory."
                        },
                        {
                            "type": "text",
                            "label": "Staging/Temp Directory",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max directory length is 4096",
                                    "minLength": 0,
                                    "maxLength": 4096
                                }
                            ],
                            "field": "temp_path",
                            "defaultValue": "$SPLUNK_HOME/etc/apps/kvstore_tools/temp",
                            "help": "Local storage location for staging uploads and downloads.\nNOT customizable in Splunk Cloud."
                        },
                        {
                            "type": "text",
                            "label": "Backup Directory",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max directory length is 4096",
                                    "minLength": 0,
                                    "maxLength": 4096
                                }
                            ],
                            "field": "backup_path",
                            "defaultValue": "$SPLUNK_HOME/etc/apps/kvstore_tools/backups",
                            "help": "Local storage location for backup files.\nNOT customizable in Splunk Cloud."
                        }
                    ],
                    "title": "Local Storage"
                },
                {
                    "name": "proxy",
                    "entity": [
                        {
                            "type": "radio",
                            "label": "Status",
                            "field": "proxy_enabled",
                            "help": "Use a proxy server for connections.",
                            "defaultValue": "0",
                            "options": {
                                "items": [
                                    {
                                        "label": "Enabled",
                                        "value": "1"
                                    },
                                    {
                                        "label": "Disabled",
                                        "value": "0"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "singleSelect",
                            "label": "Proxy Type",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "http",
                                        "label": "http"
                                    },
                                    {
                                        "value": "socks4",
                                        "label": "socks4"
                                    },
                                    {
                                        "value": "socks5",
                                        "label": "socks5"
                                    }
                                ]
                            },
                            "defaultValue": "http",
                            "field": "proxy_type"
                        },
                        {
                            "type": "text",
                            "label": "Host",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max host length is 4096",
                                    "minLength": 0,
                                    "maxLength": 4096
                                }
                            ],
                            "field": "proxy_url"
                        },
                        {
                            "type": "text",
                            "label": "Port",
                            "validators": [
                                {
                                    "type": "number",
                                    "range": [
                                        1,
                                        65535
                                    ]
                                }
                            ],
                            "field": "proxy_port"
                        },
                        {
                            "type": "text",
                            "label": "Username",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max length of username is 50",
                                    "minLength": 0,
                                    "maxLength": 50
                                }
                            ],
                            "field": "proxy_username"
                        },
                        {
                            "type": "text",
                            "label": "Password",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max length of password is 8192",
                                    "minLength": 0,
                                    "maxLength": 8192
                                }
                            ],
                            "encrypted": true,
                            "field": "proxy_password"
                        },
                        {
                            "type": "radio",
                            "label": "Reverse DNS Resolution",
                            "field": "proxy_rdns",
                            "help": "Use reverse DNS resolution for proxy requests.",
                            "defaultValue": "0",
                            "options": {
                                "items": [
                                    {
                                        "label": "Enabled",
                                        "value": "1"
                                    },
                                    {
                                        "label": "Disabled",
                                        "value": "0"
                                    }
                                ]
                            }
                        }
                    ],
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    },
                    "title": "Proxy Setup"
                },
                {
                    "name": "logging",
                    "entity": [
                        {
                            "type": "singleSelect",
                            "label": "Log level",
                            "options": {
                                "disableSearch": true,
