                        },
                        {
                            "type": "text",
                            "label": "Username",
                            "field": "username",
                            "help": "Username to use for authentication."
                        },
                        {
                            "type": "text",
                            "label": "Password",
                            "field": "password",
                            "help": "Password to use for authentication.",
                            "encrypted": true
                        },
                        {
                            "type": "text",
                            "label": "Storage Account Name",
                            "field": "storage_account",
                            "help": "Azure Blob or Data Lake storage account name."
                        },
                        {
                            "type": "text",
                            "label": "Access Key",
                            "field": "access_key",
                            "help": "Access Key to authenticate to the storage account.",
                            "encrypted": true
                        },
                        {
                            "type": "text",
                            "label": "Tenant ID",
                            "field": "tenant_id",
                            "help": "Azure AD Tenant ID to use for Azure AD authentication."
