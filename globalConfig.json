                                    {
                                        "label": "Disabled",
                                        "value": true
                                    }
                                ]
                            }
                        },
                        {
                            "type": "singleSelect",
                            "label": "Type",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "api_key",
                                        "label": "API Key (Splunk)"
                                    },
                                    {
                                        "value": "password",
                                        "label": "Password (Splunk or SFTP)"
                                    },
                                    {
                                        "value": "domain_account",
