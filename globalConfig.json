                                    },
                                    {
                                        "value": "aws_assumed_role",
                                        "label": "AWS Assumed Role"
                                    },
                                    {
                                        "value": "azure_storage",
                                        "label": "Azure Storage Account"
                                    },
                                    {
                                        "value": "azure_ad",
                                        "label": "Azure Active Directory Client"
                                    },
                                    {
                                        "value": "private_key",
                                        "label": "Private Key (SFTP)"
                                    }
                                ]
                            },
                            "defaultValue": "api_key",
                            "field": "auth_type"
                        },
                        {
                            "type": "text",
                            "label": "API Key",
                            "field": "api_key",
                            "help": "API Key to use for authentication.",
                            "encrypted": true
                        },
                        {
                            "type": "text",
